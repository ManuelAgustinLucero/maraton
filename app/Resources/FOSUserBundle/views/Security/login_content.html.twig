{% trans_default_domain 'FOSUserBundle' %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="wrapper ">
    <div class="content">
        <div class="section section-features">
            <div class="">
                <div class="col-md-4 col-sm-offset-4">
                    <h3 class="title text-center">Login</h3>

                    <div class="card card-green" >
                        <div class="card-avatar">
                            <a href="#pablo">
                                <img class="img" width="80px" height="80px" src="{{ asset('assets/img/logos/Atletismo.png') }}" />
                            </a>
                        </div>
                        <div class="card-header" data-background-color="purple">
                            <h6 class="category text-center"></h6>
                        </div>


                        <div class="card-content">
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}

                            <div class="row">
                                <div class="col-md-6 col-sm-offset-3">
                                    <div class="form-group label-floating">
                                        <label class="control-label">{{ 'security.login.username'|trans }}</label>
                                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                                    </div>
                                </div>


                            </div>
                           <div class="row">
                               <div class="col-md-6 col-sm-offset-3">
                                   <div class="form-group label-floating">
                                       <label class="control-label">{{ 'security.login.password'|trans }}</label>
                                       <input class="form-control" type="password" id="password" name="_password" required="required" />
                                   </div>
                               </div>
                           </div>
                            <br>
                            <input class="btn btn-primary col-md-4 col-sm-offset-4" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                        </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>