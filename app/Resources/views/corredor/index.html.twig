{% block body %}


    {% if is_granted('ROLE_ADMIN') %}

    <div class="wrapper ">
        <div class="content">
            <div class="section section-features">
                <div class="">
                    <div class="col-md-8 col-sm-offset-2">

                        <div class="card card-blue" >
                            <div class="card-header" data-background-color="purple">
                                <h3 class="title text-center">Concursantes</h3>
                                <h6 class="category text-center"></h6>
                            </div>
                            <br><br>

                            <div class="card-content table-responsive ">
                                <table id="example"   class="table table-hover">
                                    <thead>
                                        <tr class="text-justify ">
                                            <th >Id</th>
                                            <th>Nombre</th>
                                            <th>Apellido</th>
                                            <th>Email</th>
                                            <th>Ciudad</th>
                                            
                                            <th>Categoria</th>

                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for corredor in corredors %}
                                        <tr class="text-justify">
                                            <td><a href="{{ path('corredor_show', { 'id': corredor.id }) }}">{{ corredor.id }}</a></td>
                                            <td>{{ corredor.nombre }}</td>
                                            <td>{{ corredor.apellido }}</td>
                                            <td>{{ corredor.email }}</td>
                                            <td>
                                                {% if  (corredor.ciudad.provincia.nombre is defined) %}
                                                    {{ corredor.ciudad }}
                                                {% else %}
                                                    {{corredor.pais}}
                                                {% endif %}

                                            </td>
                                            <td>{{ corredor.rangedate }}</td>

                                            <td>

                                                <a href="{{ path('corredor_show', { 'id': corredor.id }) }}">Info</a>
                                                <a href="{{ path('corredor_edit', { 'id': corredor.id }) }}">Editar</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>


                        </div>
                        <br>
                        <a  class="btn btn-success col-md-6 col-sm-offset-3"href="{{ path('corredor_new') }}">Nueva inscripcion</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>

{% else %}
    <br><br><br><br>
        <div class="content">
            <div class="section section-features">
                <div class="">
                    <div class="col-md-4 col-sm-offset-4">

                        <div class="card card-orange" >
                            <br>
                            <h6 class="title text-danger">¡¡¡ Atencion !!!</h6>
                            <hr>
                            <br><br>
                            <h6 class="text-danger">Usted no tiene autorizacion para ver esta sección</h6>
                            <br><br>
                            <hr>
                            <br>

                            <a  class="btn btn-primary col-md-6 col-sm-offset-3" href="{{ path('fos_user_security_login') }}">Login </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

{% endif %}
    </div>
{% endblock %}
